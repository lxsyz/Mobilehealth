<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bbcc.mobilehealth"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SEND_SMS"></uses-permission>  

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="478b808985f51df06a3a4c1dddee4890" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name=".ResultActivity"
            android:label="通知"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="登录"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="注册"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="设置" >
        </activity>
        <activity
            android:name=".DataRecordActivity"
            android:label="详细记录"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateUnchanged" >
        </activity>
        <activity
            android:name=".ExceptionRecordActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="异常记录" >
        </activity>
        
        <activity 
            android:label="个人信息"
            android:name=".PersonDataActivity"
            android:windowSoftInputMode="stateUnchanged"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name=".UserInfoActivity"
            android:launchMode="singleTop" 
            android:label="编辑个人信息">
        </activity>
        
        <activity 
            android:name=".EditActivity"
            android:label="编辑区"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <activity 
            android:screenOrientation="portrait"
            android:label="显示心率"
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".HeartRateShowActivity">
            
        </activity>
        <activity 
            android:screenOrientation="portrait"
            android:label="修改密码"
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".ChangePasswordActivity"></activity>
        <activity
            android:name=".HealthPlanActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="健康方案" >
        </activity>
        <activity
            android:name=".StatisticsActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="统计数据" >
        </activity>
		<activity 
            android:name=".DiscoverActivity" 
            android:label="搜寻蓝牙设备"></activity>
        <activity
            android:name=".DeviceDetailsActivity"
            android:label="心率详情"
            android:screenOrientation="portrait" >
        </activity>
        <service
            android:name=".service.HardwareConnectorService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service android:name=".service.StepService" >
        </service>
         <service
            android:name=".service.LoactionService"
            android:exported="true" />
    </application>

</manifest>