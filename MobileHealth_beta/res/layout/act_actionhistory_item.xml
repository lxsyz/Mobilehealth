<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/act_action_item_textview"
                android:layout_marginBottom="20dp"
                android:text="你的足迹：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/act_action_histery_step"
                    style="@style/act_action_item_textview2"
                    android:text="0000" />

                <TextView
                    style="@style/act_action_item_textview"
                    android:text="步" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/act_action_item_textview"
                android:layout_marginBottom="20dp"
                android:text="公里：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/act_action_histery_kilometer"
                    style="@style/act_action_item_textview2"
                    android:text="0.0" />

                <TextView
                    style="@style/act_action_item_textview"
                    android:text="公里" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/act_action_item_textview"
                android:layout_marginBottom="20dp"
                android:text="卡路里：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/act_action_histery_calorie"
                    style="@style/act_action_item_textview2"
                    android:text="00" />

                <TextView
                    style="@style/act_action_item_textview"
                    android:text="大卡" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/act_action_item_textview"
                android:layout_marginBottom="20dp"
                android:text="消耗：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/act_action_histery_consumed"
                    style="@style/act_action_item_textview2"
                    android:text="0.0" />

                <TextView
                    style="@style/act_action_item_textview"
                    android:text="个汉堡" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>